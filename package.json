{
  "name": "Amebo-api",
  "version": "1.0.0",
  "standard": {
    "globals": [
      "describe",
      "context",
      "before",
      "beforeEach",
      "after",
      "afterEach",
      "it",
      "expect"
    ]
  },
  "description": "Amebo-api is the api for a platform that gives Nigerians the ability to speek freely without interference from the government.",
  "main": "server.js",
  "scripts": {
    "start": "yarn run build && nodemon server.js --exec babel-node ",
    "start-dev": "babel-node server.js",
    "test": "mocha --require @babel/register --exit",
    "clean": "rimraf dist coverage ",
    "build": "yarn run clean && babel ./ --out-dir ./dist --ignore node_modules",
    "start-prod": "yarn run build && nodemon ./dist/server.js",
    "coverage": "yarn run build && nyc npm test && nyc report --reporter=text-lcov || coveralls"
  },
  "keywords": [
    "node.js",
    "Express",
    "ESlint",
    "babel"
  ],
  "author": "David whyte john",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/davdwhyte87/iReporter/issues"
  },
  "homepage": "https://github.com/davdwhyte87/iReporter#readme",
  "dependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.4",
    "@babel/node": "^7.2.2",
    "@babel/preset-env": "^7.3.4",
    "@sendgrid/mail": "^6.3.1",
    "babel-eslint": "^10.0.1",
    "babel-plugin-istanbul": "^5.1.1",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "chai": "^4.2.0",
    "chai-http": "^4.2.1",
    "config": "^2.0.2",
    "coveralls": "^3.0.3",
    "dotenv": "^6.1.0",
    "express": "^4.16.3",
    "express-validator": "^5.3.0",
    "hogan": "^1.0.2",
    "jsonwebtoken": "^8.3.0",
    "lokijs": "^1.5.5",
    "mocha": "^6.0.1",
    "mocha-lcov-reporter": "^1.3.0",
    "mongoose": "^5.3.9",
    "morgan": "^1.9.0",
    "nodemon": "^1.18.5",
    "nyc": "^13.3.0",
    "pg": "^7.8.0",
    "pg-hstore": "^2.3.2",
    "rimraf": "^2.6.2",
    "sendgrid": "^5.2.3",
    "sequelize": "^4.42.0",
    "sequelize-cli": "^5.4.0",
    "@babel/polyfill": "^7.2.5"
  },
  "devDependencies": {
    "@babel/register": "^7.0.0",
    "eslint": "^5.5.0",
    "eslint-config-airbnb-base": "13.1.0",
